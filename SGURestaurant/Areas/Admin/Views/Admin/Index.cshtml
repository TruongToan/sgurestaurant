
@{
    ViewBag.Title = "Index";
}


<h3>Tổng quan</h3>

@if (User.IsInRole("Admin"))
{
    <div class="row box-gray">
        <div class="col-md-12">
            <div class="col-md-3">
                <div class="smallstat box"><a href="@Url.Action("../Users/Index")">
                    <div class="boxchart float-left">
                        <img class="stat-img" src="~/Content/Images/stat_user.png" />
                    </div>
                    <p class="box-title">Người dùng</p></a>
                    <p class="box-value">@ViewData["user-count"]</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="smallstat box"><a href="@Url.Action("../Meals/Index")">
                    <div class="boxchart float-left">
                        <img class="stat-img" src="~/Content/Images/stat_product.png" />
                    </div>
                    <p class="box-title">Món ăn</p></a>
                    <p class="box-value">@ViewData["meal-count"]</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="smallstat box"><a href="@Url.Action("../Bookings/Index")">
                    <div class="boxchart float-left">
                        <img class="stat-img" src="~/Content/Images/stat_cart.png" />
                    </div>
                    <p class="box-title">Đặt món</p></a>
                    <p class="box-value">@ViewData["booking-count"]</p>
                </div>
            </div>
            <div class="col-md-3">
                <div class="smallstat box">
                    <div class="boxchart float-left">
                        <img class="stat-img" src="~/Content/Images/stat_money.png" />
                    </div>
                    <p class="box-title">Doanh thu</p>
                    <p class="box-value">@ViewData["income"]</p>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <p>Bạn không được phép xem trang này</p>
    <p>Vui lòng liên hệ với quản trị viên</p>
    @Html.Partial("_404")
}



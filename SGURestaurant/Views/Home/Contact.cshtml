@{
    ViewBag.Title = "Liên hệ";
}

<style>
    #googleMap {
        margin-left: 1%;
        width: 60%;
        height: 400px;
        border: solid 0px;
    }
</style>
<script src="https://maps.googleapis.com/maps/api/js?sensor=false&amp;language=vi"></script>

<script>
    function initialize() {
        var myLatlng = new google.maps.LatLng(10.7596971, 106.6823729, 21);
        var mapOptions = {
            zoom: 17,
            center: myLatlng
        };
        var map = new google.maps.Map(document.getElementById('googleMap'), mapOptions);

        var contentString = "<table><tr><th>Nhà Hàng SGU - SGU Restaurant</th></tr><tr><td>273 An Dương Vương - P.3 - Q.5 - HCM</td></tr></table>";

        var infowindow = new google.maps.InfoWindow({
            content: contentString
        });

        var marker = new google.maps.Marker({
            position: myLatlng,
            map: map,
            title: 'Nhà hàng SGU - Q.5 HCM'
        });
        infowindow.open(map, marker);
    }
    google.maps.event.addDomListener(window, 'load', initialize);
</script>


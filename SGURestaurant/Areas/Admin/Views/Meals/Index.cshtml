@model IEnumerable<SGURestaurant.Models.Meal>

@{
    ViewBag.Title = "Quản lý món ăn";
}

<h2>Danh sách các món ăn</h2>

<p>
    @Html.ActionLink("+Thêm món ăn", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImageUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.OriginPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Indredients)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MealStyle.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MealType.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Status)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr class="admin-meal-item">
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            <img class="small-thumbnail" src="@Html.DisplayFor(modelItem => item.ImageUrl) " />
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.OriginPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Price)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Indredients)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MealStyle.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MealType.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Status)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>

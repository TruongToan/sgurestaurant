@model SGURestaurant.Models.Booking

@{
    ViewBag.Title = "Index";
}

<h2>Thông tin đặt món</h2>

<script src="~/Scripts/jquery-1.10.2.min.js"
        type="text/javascript"></script>

<script src="~/Scripts/jquery.datetimepicker.full.js" type="text/javascript"></script>

@if (Request.IsAuthenticated)
{

using (Html.BeginForm("Index", "Home"))
{
    <button type="submit" class="btn btn-danger">Hủy hóa đơn</button>
}
<hr />
<ul class="nav nav-pills nav-justified">
    <li class="active"><a data-toggle="tab" href="#home">Thông tin đặt món &gt;</a></li>
    <li><a data-toggle="tab" href="#menu1">Thông tin khách hàng &gt;</a></li>
    <li><a data-toggle="tab" href="#menu2">Thông tin bổ sung &gt;</a></li>
    <li><a data-toggle="tab" href="#menu3">Hoàn thành</a></li>
</ul>

<hr />

<div class="tab-content">
    <div id="home" class="tab-pane in active">
        
        <div class="row">
            <div class="col-md-6">
                <h4>Chi tiết đặt món</h4>
                <table class="table" id="my-shopping-cart">
                    <tr>
                        <th>
                            Tên món
                        </th>
                        <th>
                            Số lượng
                        </th>
                        <th>
                            Đơn giá
                        </th>
                    </tr>

                    @{
                        var total = 0;
                    }
                    @foreach (var item in Model.BookingDetails)
                    {
                        total += item.Number * item.Meal.Price;

                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Meal.Name)
                            </td>
                            <td>
                                @(item.Number)
                            </td>
                            <td>
                                @(item.Meal.Price.ToString("0,000"))
                            </td>
                        </tr>
                    }

                </table>
            </div>

            <div class="col-md-6">
                <br />
                <br />
                <table>
                    <tr>
                        <th class="col-md-4">Tổng tiền món ăn</th>
                        <td class="text-right col-md-2">@(total.ToString("0,000"))</td>
                    </tr>
                    <tr>
                        <th class="col-md-4">Phí VAT (10%)</th>
                        <td class="text-right col-md-2">@((total * 0.1f).ToString("0,000"))</td>
                    </tr>
                    <tr>
                        <th class="col-md-4">Tổng cộng (đã làm tròn số)</th>
                        <td class="text-right col-md-2">@(((int)(total * 1.1f / 1000) * 1000).ToString("0,000"))</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <div id="menu1" class="tab-pane">
        <div class="row">
            @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <div class="row">
                    <div class="col-md-6">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class = "text-danger col-md-offset-4" })

                        <div class="form-group">
                            <div class="col-md-4 control-label">Số điện thoại</div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.User.PhoneNumber, new { @class = "form-control" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-4 control-label">Địa chỉ</div>
                            <div class="col-md-8">
                                @Html.TextBoxFor(m => m.User.Address, new { @class = "form-control" })
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
    <div id="menu2" class="tab-pane">
        <div class="row">
            <div class="col-lg-6">
                <div id="show_inline">
                    <input type="text" id="datetimepicker10" />
                </div>
            </div>

            <div class="col-lg-6">
                <h4>Chọn bàn</h4>
                <table class="table">
                    <tr>
                        <td colspan="1" rowspan="1" class="table_empty">Bàn 2</td>
                        <td colspan="1" rowspan="1" class="table_empty">Bàn 3</td>
                        <td colspan="1" rowspan="1" class="table_empty">Bàn 4</td>
                    </tr>
                    <tr>
                        <td colspan="1" rowspan="1" class="table_empty">Bàn 11</td>
                        <td colspan="1" rowspan="2" class="table_empty">Bàn 1</td>
                        <td colspan="1" rowspan="1" class="table_empty">Bàn 5</td>
                    </tr>
                    <tr>
                        <td colspan="1" rowspan="1" class="table_empty">Bàn 10</td>
                        <td colspan="1" rowspan="1" class="table_empty">Bàn 6</td>
                    </tr>
                    <tr>
                        <td colspan="1" rowspan="1" class="table_empty">Bàn 9</td>
                        <td colspan="1" rowspan="1" class="table_empty">Bàn 8</td>
                        <td colspan="1" rowspan="1" class="table_empty">Bàn 7</td>
                    </tr>
                </table>
            </div>
        </div>
    </div>
    <div id="menu3" class="tab-pane">
        <div class="row">
            <div class="col-md-6">
                <h4>Chi tiết đặt món</h4>
                <table class="table" id="my-shopping-cart">
                    <tr>
                        <th>
                            Tên món
                        </th>
                        <th>
                            Số lượng
                        </th>
                        <th>
                            Đơn giá
                        </th>
                    </tr>

                    @foreach (var item in Model.BookingDetails)
                    {
                        total += item.Number * item.Meal.Price;

                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Meal.Name)
                            </td>
                            <td>
                                @(item.Number)
                            </td>
                            <td>
                                @(item.Meal.Price.ToString("0,000"))
                            </td>
                        </tr>
                    }

                </table>
            </div>


            <div class="col-md-6">
                @using (Html.BeginForm("Create", "Booking", FormMethod.Get))
                {
                    @Html.TextBoxFor(e => e.TableId, new { type = "hidden", id = "book-table" });
                    @Html.TextBoxFor(e => e.Time, new { type = "hidden", id = "book-time" });
                    @Html.TextBoxFor(e => e.User.Id, new { type = "hidden", id = "book-user" });
                    <button type="submit" class="btn btn-primary navbar-right">Xác nhận đặt món</button>
                }
            </div>
        </div>

    </div>
</div>

}
else
{
    <p>Bạn cần đăng nhập để đặt món!</p>
    @Html.ActionLink("Vui lòng đăng nhập để tiếp tục", "Login", "Account", new { ReturnUrl = Request.Url.AbsoluteUri }, null);
}

<hr />

@Html.ActionLink("Quay lại trang chủ", "Index", "Home")

<script>
    $('#datetimepicker10').datetimepicker({
                        step: 5,
        inline: true,
        timepicker: false
    });

    $('#datetimepicker10').on("change", function () {
                            alert($(this).val());
                        });
</script>
@model SGURestaurant.Models.IndexViewModel
@{
    ViewBag.Title = "Quản lý tài khoản";
}

<h2>@ViewBag.Title.</h2>

<p class="text-success">@ViewBag.StatusMessage</p>
<div>
    <h4>Thay đổi các cài đặt tài khoản</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>Mật khẩu:</dt>
        <dd>
            [
            @if (Model.HasPassword)
            {
                @Html.ActionLink("Thay đổi mật khẩu", "ChangePassword")
            }
            else
            {
                @Html.ActionLink("Create", "SetPassword")
            }
            ]
        </dd>
        <dt>Đăng nhập khác:</dt>
        <dd>
            @Model.Logins.Count [
            @Html.ActionLink("Quản lý", "ManageLogins") ]
        </dd>

    </dl>
    <hr />

    <h4>Xem lịch sử</h4>
    @Html.ActionLink("Lịch sử đặt món", "Index", "Booking")
</div>

@model IEnumerable<SGURestaurant.Areas.Admin.Models.UserViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PhoneNumber)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Role)
        </th>
    </tr>

@foreach (var item in Model)
{
    using (Html.BeginForm("Update/" + item.Id, "Users", FormMethod.Post))
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PhoneNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @if (User.Identity.Name == item.UserName)
                {
                    @Html.DropDownListFor(modelItem => item.Role, ViewData["role-" + item.UserName] as SelectList, new { onchange = "submit()", disabled = "diasbled" });
                }
                else
                {
                    @Html.DropDownListFor(modelItem => item.Role, ViewData["role-" + item.UserName] as SelectList, new { onchange = "submit()" });
                }
            </td>
        </tr>
    }

}

</table>
